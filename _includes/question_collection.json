{
    {% assign page_size = site.pagination.page_size | default: 15 -%}
    {% assign current_page = page.page | default: 1 -%}
    {% assign for_offset = current_page | minus:1 | times:page_size -%}
    {% assign for_count = 0 -%}
    "title": {{ page.title | default: "Questions" | jsonify }},
    "path": {{ page.path | jsonify }},
    "page": {{ current_page }},
    "value": [
        {% capture questions_where_exp %}question.topics contains '{{ page.topic | default: site.topic }}'{% endcapture -%}
        {% assign questions = site.questions | where_exp: "question", questions_where_exp -%}
        {% for question in questions limit:page_size offset:for_offset -%}
        {
            {% if forloop.last -%}
                {% assign for_count = forloop.length -%}
            {% endif -%}
            "path": {{ question.path | jsonify }},
            "name": {{ question.name | jsonify }},
            "excerpt": {{ question.excerpt | strip_html | normalize_whitespace | strip | jsonify }},
            "type": {{ question.type | jsonify }},
            "sourceUrl": "{{ question.url | absolute_url }}",
            "webUrl": "{{ site.webUrl }}{{ question.path | replace: '_questions/','/questions?id=' | replace: '.md','' }}",
            "heat": {{ question.heat | default: 0 | jsonify }},
            {% if question.provider -%}
            "provider": {
                {% if question.provider.domain -%}
                "domain": "{{ question.provider.domain }}",
                {% endif -%}
                {% if question.provider.images -%}
                "images": [
                    {% for image in question.provider.images -%}
                    {
                        "url": "{{ image.url | absolute_url }}",
                        "width": {{ image.width | default: 0 }},
                        "height": {{ image.height | default: 0 }}
                    }{% unless forloop.last -%},{% endunless %}
                    {% endfor %}
                ],
                {% endif -%}
                "name": {{ question.provider.name | jsonify }}
            },
            {% endif -%}
            "images": [
                {% for image in question.images -%}
                {
                    "width": {{ image.width | default: 0 }},
                    "height": {{ image.height | default: 0 }},
                    "quality": {{ image.quality | default: 100 }},
                    "url": "{{ image.url | absolute_url }}",
                    "attribution": {{ image.attribution | jsonify }},
                    "title": {{ image.title | jsonify }}
                }{% unless forloop.last -%},{% endunless %}
                {% endfor %}
            ],
            "locale": {{ question.locale | default: site.locale | jsonify }},
            "topics": {{ question.topics | jsonify }}
        }{% unless forloop.last -%},{% endunless %}
        {% endfor %}
    ],
    {% if for_count < page_size or current_page == 9 -%}
    "nextPage": null
    {% else -%}
    "nextPage": "{{ current_page | plus:1 }}"
    {%- endif %}
}
